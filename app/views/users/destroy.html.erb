<%= render 'creatives/navbar' %>

<header>
  <div class="header-content">
    <div class="header-content-inner">
      <% if @user.isAdmin %>

          <h3>ADMIN</h3>
          <table>
            <tr>
              <td>Username</td>

              <td>Email</td>
            </tr>
            <% @users.each do |user| %>
                <tr>
                  <td><%= user.username %></td>
                  <td><%= user.email %></td>
                  <td><%= link_to 'Destroy', user, method: :delete, data: {confirm: 'Are you sure?'} %></td>
                </tr>
            <% end %>
      <% else %>
          <h3>Sorry you are not Admin</h3>


      <% end %>


      </table>

    </div>
  </div>
</header>